{
    "name": "orbitdb",
    "version": "1.0.0",
    "main": "index.js",
    "module": "main.js",
    "watch": {
      "gen:gql": {
        "patterns": ["build", "../spec"],
        "extensions": "ts,graphql"
      }
    },
    "scripts": {
      "build:gen:gql": "tsc --skipLibCheck build/ts-gql-typedefs.ts",
      "build:ts": "tsc --project build",
      "build": "npm run gen:gql && npm run build:ts",
      "dev:gql": "npm-watch gen:gql",
      "dev:ts": "ts-node-dev --respawn -- src/index.ts",
      "dev": "npm run dev:gql & npm run dev:ts",
      "test": "jest",
      "start": "npm run build && node dist/index.js",
      "gen:gql": "npm run build:gen:gql && graphql-codegen --config build/codegen.yml"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
      "apollo-server": "^2.25.0",
      "express": "^4.17.1",
      "graphql": "^15.5.0",
      "graphql-tools": "^7.0.5",
      "ipfs": "^0.55.1",
      "ipfs-http-client": "^50.0.0",
      "orbit-db": "^0.26.1"
    },
    "description": "",
    "devDependencies": {
      "@apollo/server": "^3.0.0-alpha.1",
      "@graphql-codegen/cli": "1.21.5",
      "@graphql-codegen/introspection": "1.18.2",
      "@graphql-codegen/typescript": "1.22.1",
      "@graphql-codegen/typescript-resolvers": "1.19.2",
      "@types/express": "^4.17.11",
      "@types/jest": "^26.0.23",
      "@types/node": "^15.6.0",
      "jest": "^26.6.3",
      "npm-watch": "^0.9.0",
      "ts-jest": "^26.5.6",
      "ts-node": "^9.1.1",
      "ts-node-dev": "^1.1.6",
      "typescript": "^4.2.4"
    }
  }
  